require(["jquery", "jquery.pjax"], function($) {

  <% if @item.errors.empty? %>
		// redirect to the item
		$.pjax({
			url: "<%= url_for(@item) %>",
			container: "[data-pjax-container='main']"
		})
  <% else %>
    // load the form
    <% if @item.persisted? %>
	  	var form = $("#edit_item_<%= @item.id %>")
	  <% else %>
	  	var form = $("#new_item")
	  <% end %>
  	// remove any current errors
  	form.find(".error_explanation").remove()
  	// add the new errors
  	form.prepend("<%=j render "errors", errors: @item.errors %>")
  <% end %>

})