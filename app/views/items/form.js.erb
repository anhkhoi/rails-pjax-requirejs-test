(function($) {

  <% if @item.errors.empty? %>
		// redirect to the item
		Turbolinks.visit("<%=j url_for(@item) %>")
  <% else %>
    // load the form
    <% if @item.persisted? %>
	  	var form = $("#edit_item_<%= @item.id %>")
	  <% else %>
	  	var form = $("#new_item")
	  <% end %>
  	// replace the form
  	form.replaceWith("<%=j render "form" %>")
  <% end %>

})(jQuery)