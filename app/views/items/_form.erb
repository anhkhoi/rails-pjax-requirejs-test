<%= form_for(@item, html: { data: { remote: true, type: "script" } }) do |f| %>
  <% if @item.errors.any? %>
    <%= render "errors", errors: @item.errors %>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 5 %>
  </div>

  <div class="actions">
    <button type="submit">Submit</button>
  </div>
<% end %>
