<% set_title("Item list") %>

<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <% cache(item) do %>
    <tr class="item_<%= item.id %>">
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item, method: :delete, data: { remote: true, type: "script", confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
