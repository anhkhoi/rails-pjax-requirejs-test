<%= form_for([@item, @guide], html: { data: { remote: true, type: "script" } }) do |f| %>
  <% if @guide.errors.any? %>
    <%= render "errors", errors: @guide.errors %>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
