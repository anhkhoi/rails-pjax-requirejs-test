(function($) {

  <% if @guide.errors.empty? %>
    // redirect to the guide
    Turbolinks.visit("<%=j url_for([@item, @guide]) %>")
  <% else %>
    // load the form
    <% if @guide.persisted? %>
      var form = $("#edit_guide_<%= @guide.id %>")
    <% else %>
      var form = $("#new_guide")
    <% end %>
    // replace the form
    form.replaceWith("<%=j render "form" %>")
  <% end %>

})(jQuery)